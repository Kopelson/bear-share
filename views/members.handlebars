<!-- jQuery Js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<div class="container search_bar">
    <div class="search_wrap">
        <div class="search_box">
            <input type="text" class="input" placeholder="Search for your bear">
            <label class="label-icon" for="search"><i class="material-icons">search</i></label>
            <div type="submit" class="btn orange darken-3">Search</div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        {{#each bearsList}}
        <a href="/product" class="listing-Link" data-id="{{this.id}}">
            <div class="col s6 m4 l3">
                <div class="card">
                    <div class="card-image" style="padding: 20px 20px 0px 20px">
                        <img src="./img/example.png" height="150px" width="100px">
                    </div>
                    <div class="card-content">
                        <p style="font-size:20px; font-weight:bold;">{{this.title}}</p>
                        <p>{{this.category}}</p>
                    </div>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</div>


