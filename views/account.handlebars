<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


<div class="s12 m12">
    <div class="row">
        <div class="col s12 m12" style="margin-bottom:50px;">
            <ul class="tabs">
                <li class="tab col m4 l4"><a href="#selling_tab">Selling</a></li>
                <li class="tab col m4 l4"><a href="#message_tab">Message</a></li>
                <li class="tab col m4 l4"><a class="active" href="#account_tab">Account</a></li>
            </ul>
        </div>

        <!-- selling Tab -->
        <div id="selling_tab" class="">
            <!-- hide-on-small-only" -->
            <div class="container hide-on-small-only">
                <div class="row center" style="border-bottom:solid 1px rgb(214, 214, 214); padding-bottom:10px;">
                    <div class="col s2 tab_name">
                        Title
                    </div>
                    <div class="col s2 tab_name">
                        Category
                    </div>
                    <div class="col s2 tab_name">
                        Price
                    </div>
                    <div class="col s2 tab_name">
                        Action
                    </div>
                    <div class="col s2 tab_name">
                        Sold
                    </div>
                    <div class="col s2 tab_name">
                        Buyer
                    </div>
                </div>
                <!-- Iterate lists from DB -->
                {{#each bearsList}}
                <div class="row center" style="border-bottom:solid 1px rgb(214, 214, 214); padding-bottom:10px;">
                    <div class="col s2">
                        <span class="title_tab_data">{{title}}</span>
                    </div>
                    <div class="col s2">
                        <span class="category_tab_data">{{category}}</span>
                    </div>
                    <div class="col s2">
                        <span class="price_tab_data">{{ask_price}}</span>
                    </div>

                    <div class="col s2">
                        <a class='dropdown-trigger btn' data-id="" href='#' data-activates='dropdown_selling_tab'>
                            <span id="account_dropdown_btn_status">On sale</span></a>
                        <!-- Dropdown Structure -->
                        <ul id='dropdown_selling_tab' class='dropdown-content'>
                            <li><button class="btn_tab_account" data-id="">On sale</button></li>
                            <li><button class="btn_tab_account" data-id="">Inactive</button></li>
                            <li><button class="btn_tab_account endItem" data-id={{id}}>End item</button></li>
                        </ul>
                    </div>

                    <div class="col s2">
                        <span class="sold_tab_data">x</span>
                    </div>
                    <div class="col s2">
                        <span class="buyer_tab_data">null</span>
                    </div>
                </div>
                {{/each}}
            </div>

            <!-- hide-on-med-and-up -->
            <div class="container hide-on-med-and-up">
                <!-- Iterate lists from DB -->
                {{#each bearsList}}
                <div class="col s6">
                    <div class="card">
                        <div class="card-content">
                            <p class="title_tab_data" style="font-size:20px; font-weight:bold;">TEST_Title</p>
                            <p class="category_tab_data">TEST_Category</p>
                            <p class="price_tab_data">TEST_Price</p>
                            <!-- Dropdown Structure -->
                            <div>
                                <p>Actions:</p>
                                <li><a class="btn_tab_account" data-id="">On sale</a></li>
                                <li><a class="btn_tab_account" data-id="">Inactive</a></li>
                                <li><a class="btn_tab_account endItem" data-id={{id}}>End item</a></li>
                            </div>
                            <p class="active_tab_data">on sale</p>
                            <p class="sold_tab_data">sold</p>
                            <p class="buyer_tab_data">TEST_buyer</p>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
        <!-- message_tab-->
        <div id="message_tab" class="">
            <div class="container orange-text text-darken-3 center" style="font-size:18px;">
                It will be on service sooner than later.
            </div>
        </div>
        <!-- account Tab -->
        <div id="account_tab" class="">
            <div class="container">
                <div class="row">
                    <form class="col s12 post_item">
                        <div class="row">
                            <div class="col s12 m3 orange-text text-darken-3 post_label_custom left">
                                Name :
                            </div>
                            <div class="col s12 m9 black-text text-darken-3 post_label_custom left">
                                <strong><span id="user_name"></span></strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 m3 orange-text text-darken-3 post_label_custom left">
                                Address :
                            </div>
                            <div class="col s12 m9 black-text text-darken-3 post_label_custom left">
                                <strong><span id="user_address">Test_Address Address</span></strong>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 m3 orange-text text-darken-3 post_label_custom left">
                                email :
                            </div>
                            <div class="col s12 m9 black-text text-darken-3 post_label_custom left">
                                <span id="user_email">Test_email email</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 m3 orange-text text-darken-3 post_label_custom left">
                                Phone Number :
                            </div>
                            <div class="col s12 m9 black-text text-darken-3 post_label_custom left">
                                <span id="user_phone">Test_Phone number</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 m12">
                                <div class="left" style="margin-top: 50px;">
                                    <div class="row">
                                        <div class="col s6 m6">
                                            <button class="btn white orange-text text-darken-3 waves-effect left"
                                                data-id="" id="account_edit_btn"
                                                style=" border: solid 1px">Edit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/account.js"></script>